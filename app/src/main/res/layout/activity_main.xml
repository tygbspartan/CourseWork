<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:gravity="center"
        android:textColor="#FF5722"
        android:layout_marginBottom="30dp"
        android:textSize="30sp"
        android:text="User Registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name:"/>

    <EditText
        android:inputType="textPersonName"
        android:id="@+id/fullname_id"
        android:hint="Enter Name.."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Phone:"/>

    <EditText
        android:inputType="textPhonetic"
        android:id="@+id/phone_id"
        android:hint="Enter Phone No..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Location:"/>

    <EditText
        android:inputType="textPersonName"
        android:id="@+id/location_id"
        android:hint="Enter Name.."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/email_title"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Email:"/>

    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/signup_email_id"
        android:hint="Enter Email..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pass_1"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Password"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/signup_pass_id"
        android:hint="Enter Password..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/pass_2"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Confirm Password:"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/signup_Confirmpass_id"
        android:hint="Confirm  Password..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="signup"
        android:text="Sign Up"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:background="#FF5722"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"/>

    <TextView
        android:text="Already have an account?"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="btnSignIn"
        android:text="Sign In"
        android:background="#03A9F4"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>
S
</LinearLayout>